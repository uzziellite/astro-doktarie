---
import Whatsapp from "@components/Whatsapp.vue"
import Layout from "@layouts/layout.astro"
import Intro from "@components/Intro.vue"
import ContactForm from "@components/ContactForm.vue"
---
<Layout title="Get in touch" description="Get in touch with us.">
  <Intro 
  	background={`${import.meta.env.PUBLIC_CMS}assets/76885945-51bd-414f-b520-ae637ac91f9d`}
  	title="Contact Us"
		description="Get in touch with us by filling the form below and we will definitely get back to you. You can also start a whatsapp conversation by clicking on the Whatsapp button below"
  />
  <section class="container mx-auto my-4 p-4">
    <div class="grid md:grid-cols-2 p-2 gap-x-6 gap-y-2">
    	<div class="grid gap-2 ">
        <h2 class="text-2xl text-stone-800 dark:text-white capitalize font-semibold md:text-center">
          Get Directions to our offices
        </h2>
        <iframe class="h-72 w-full rounded-lg mr-4" title="Google Map" width="150" height="50" style="border:0" loading="lazy" allowfullscreen src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJrbas04cULxgR7c0WWaJWqko&key=AIzaSyCAymKZhNqCjCirV6ZaR3bRTIrFRjr9YAs"></iframe>
      </div>
      <ContactForm 
        client:load
        url={import.meta.env.PUBLIC_CMS}
      />
    </div>
  </section>
  <section class="container mx-auto my-4 p-4">
  	<div class="grid md:grid-cols-3 gap-4">
  		<div class="grid place-content-center bg-white dark:bg-stone-800 shadow-md p-2 rounded-xl">
        <div class="text-white p-3 text-center w-12 h-12 mb-5 shadow-lg rounded-full bg-doktarie-blue mx-auto">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
        </div>
        <span class="text-stone-800 dark:text-white lg:text-2xl font-semibold">
          0722 503 853
        </span>
      </div>
      <div class="grid place-content-center bg-white dark:bg-stone-800 shadow-md p-2 rounded-xl">
        <div class="text-white p-3 text-center w-12 h-12 mb-5 shadow-lg rounded-full bg-doktarie-blue mx-auto">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path></svg>
        </div>
        <span class="text-stone-800 dark:text-white lg:text-2xl font-semibold">
          info@doktarie.com
        </span>
      </div>
      <div class="grid place-content-center bg-white dark:bg-stone-800 shadow-md p-2 rounded-xl">
        <div class="text-white p-3 text-center w-12 h-12 mb-5 shadow-lg rounded-full bg-doktarie-blue mx-auto">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        </div>
        <span class="text-stone-800 dark:text-white lg:text-2xl font-semibold">
          24/7 &mdash; Always available
        </span>
      </div>
  	</div>
  </section>
  <Whatsapp client:load />
</Layout>
